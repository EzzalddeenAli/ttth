{
    "name": "ttth",
    "productName": "ttth",
    "version": "1.0.0",
    "description": "ttth (talk to the hand) is an electron based desktop app for online services like WhatsApp-Web, Threema-Web, Telegram-Web, Google and several other services.",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "start-debug": "electron . --enable-logging",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=resources/installer/Icon.icns --prune=true --out=release-dist",
        "package-win-32": "electron-packager . ttth --overwrite --asar=true --platform=win32 --arch=ia32 --icon=resources/installer/icon.ico --prune=true --out=dist --version-string.CompanyName=yafp --version-string.FileDescription=ttth --version-string.ProductName=\"ttth\"",
        "package-win-64": "electron-packager . ttth --overwrite --asar=true --platform=win32 --arch=x64 --icon=resources/installer/icon.ico --prune=true --out=dist --version-string.CompanyName=yafp --version-string.FileDescription=ttth --version-string.ProductName=\"ttth\"",
        "package-linux-64": "electron-packager . ttth --overwrite --asar=true --platform=linux --arch=x64 --icon=resources/installer/icons/1024x1024.png --prune=true --out=dist",
        "build-win": "build --win --ia32 --x64",
        "build-win32": "build --win --ia32",
        "build-win64": "build --win --x64",
        "build-linux": "build --linux",
        "build-linux32": "build --linux --ia32",
        "build-linux64": "build --linux --x64"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yafp/ttth"
    },
    "bugs": {
        "url": "https://github.com/yafp/ttth/issues"
    },
    "homepage": "https://github.com/yafp/ttth",
    "keywords": [
        "Electron",
        "messenger",
        "github",
        "google calendar",
        "google contacts",
        "google keep",
        "google mail",
        "google messages",
        "slack",
        "telegram",
        "threema",
        "whatsapp"
    ],
    "author": "yafp <fidel@yafp.de>",
    "license": "GPL-3.0",
    "build": {
        "productName": "ttth",
        "appId": "de.yafp.ttth",
        "extraResources": [
            {
                "from": "resources/installer",
                "to": "installer"
            }
        ],
        "extraFiles": [
            "LICENSE"
        ],
        "asar": true,
        "mac": {
            "category": "public.app-category.productivity",
            "artifactName": "ttth-${version}-mac.${ext}",
            "target": [
                "default"
            ]
        },
        "dmg": {
            "title": "ttth",
            "iconSize": 128,
            "contents": [
                {
                    "x": 355,
                    "y": 125,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 155,
                    "y": 125,
                    "type": "file"
                }
            ]
        },
        "win": {
            "icon": "assets/icons/win/icon.ico",
            "publisherName": "yafp",
            "artifactName": "ttth-${version}-win-${arch}.${ext}",
            "target": [
                "zip",
                "portable"
            ]
        },
        "linux": {
            "executableName": "ttth",
            "artifactName": "ttth-${version}-linux-${arch}.${ext}",
            "description": "ttth (talk to the hand) is an electron based desktop app for online services like WhatsApp-Web, Threema-Web, Telegram-Web, Google and several other services.",
            "category": "Network",
            "desktop": {
                "Terminal": "false",
                "Type": "Application",
                "Categories": "GTK;GNOME;Network;Email;Chat;InstantMessaging;"
            },
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "snap",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "dist/"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "yafp",
                "repo": "ttth",
                "vPrefixedTagName": false
            }
        ]
    },
    "devDependencies": {
        "electron": "^4.2.0",
        "electron-builder": "^20.40.2",
        "electron-packager": "^13.1.1"
    },
    "dependencies": {
        "auto-launch": "^5.0.5",
        "electron-i18n": "^1.1335.0",
        "i18next": "^15.1.0",
        "i18next-electron-language-detector": "0.0.10",
        "i18next-node-fs-backend": "^2.1.3",
        "i18next-sync-fs-backend": "^1.1.1"
    }
}
